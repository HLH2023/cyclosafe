{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      "^m-(.*)": "@/components/m-$1/m-$1.vue",
      "^stat-card$": "@/components/stat-card/stat-card.vue",
      "^glass-card$": "@/components/glass-card/glass-card.vue",
      "^ride-card$": "@/components/ride-card/ride-card.vue",
      "^tab-bar$": "@/components/tab-bar/tab-bar.vue",
      "^line-chart$": "@/components/line-chart/line-chart.vue"
    }
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationStyle": "custom",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/riding/riding",
      "style": {
        "navigationStyle": "custom",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/analysis/analysis",
      "style": {
        "navigationStyle": "custom",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/history/history",
      "style": {
        "navigationStyle": "custom",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/settings/settings",
      "style": {
        "navigationStyle": "custom",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/simulate/simulate",
      "style": {
        "navigationStyle": "default",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/danger-points/danger-points",
      "style": {
        "navigationStyle": "custom",
        "enablePullDownRefresh": false
      }
    }
  ],
  "globalStyle": {
    "navigationStyle": "custom",
    "backgroundColor": "#F5F5F5"
  }
}
